{
  "name": "vue3-ui",
  "version": "0.0.3",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "prepare": "husky",
    "dev:ui": "pnpm --filter=vue3-ui run dev",
    "build:ui": "pnpm --filter=vue3-ui run build",
    "test:unit:ui": "pnpm --filter=vue3-ui run test:unit:q",
    "test:unit:utils": "pnpm --filter=utils run test:q",
    "test:unit": "run-p test:unit:ui test:unit:utils",
    "test:e2e:ui": "pnpm --filter=vue3-ui run test:e2e",
    "lint-staged:ui": "pnpm --filter=vue3-ui run lint-staged",
    "lint-staged": "lint-staged",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "dependencies": {
    "pinia": "~3.0.1",
    "vue": "~3.5.13",
    "vue-router": "~4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "~1.51.1",
    "@tsconfig/node22": "~22.0.1",
    "@types/jsdom": "~21.1.7",
    "@types/node": "~22.14.0",
    "@vitejs/plugin-vue": "~5.2.3",
    "@vitejs/plugin-vue-jsx": "~4.1.2",
    "@vitest/eslint-plugin": "~1.1.39",
    "@vue/eslint-config-prettier": "~10.2.0",
    "@vue/eslint-config-typescript": "~14.5.0",
    "@vue/test-utils": "~2.4.6",
    "@vue/tsconfig": "~0.7.0",
    "commitizen": "~4.3.1",
    "cz-git": "~1.11.1",
    "eslint": "~9.22.0",
    "eslint-plugin-oxlint": "~0.16.0",
    "eslint-plugin-playwright": "~2.2.0",
    "eslint-plugin-vue": "~10.0.0",
    "husky": "~9.1.7",
    "jiti": "~2.4.2",
    "jsdom": "~26.0.0",
    "lint-staged": "~15.5.1",
    "npm-run-all2": "~7.0.2",
    "oxlint": "~0.16.0",
    "prettier": "3.5.3",
    "tsdown": "~0.9.8",
    "typescript": "~5.8.0",
    "vite": "~6.2.4",
    "vite-plugin-vue-devtools": "~7.7.2",
    "vitest": "~3.1.1",
    "vue-tsc": "~2.2.8",
    "cz": "git-cz"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "oxlint --fix",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git",
      "czConfig": "./cz.config.mjs"
    }
  }
}
